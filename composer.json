{
  "name": "hopr/result",
  "description": "Result type for PHP, as I like it do be.",
  "type": "library",
  "keywords": [
    "dev",
    "results",
    "monad"
  ],
  "license": "MIT",
  "autoload": {
    "exclude-from-classmap": [
      "/tests/",
      "/examples/"
    ],
    "psr-4": {
      "Hopr\\Result\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "phpstan/phpstan": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}